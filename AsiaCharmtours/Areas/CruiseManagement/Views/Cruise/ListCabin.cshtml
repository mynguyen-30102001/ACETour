
@{
    ViewBag.Title = "Danh sách cabin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script>
    $(".li-cruise").addClass('active');
</script>
@Html.Partial("~/Views/PartialView/Admin/pScriptUIGrid.cshtml")
<script src="~/Areas/CruiseManagement/Content/js/Cabin/cabin.js"></script>
<script src="~/Scripts/BaseJS/kendo-window.js"></script>
<script src="~/Plugin/ckeditor/ckeditor.js"></script>
<script src="~/Plugin/ckfinder/ckfinder.js"></script>
<script src="~/Plugin/ckeditor/config.js"></script>
<script src="~/Plugin/ckeditor/styles.js"></script>
<script src="~/Plugin/ckeditor/sample.js"></script>
<div ng-app="app" ng-controller="controller">
    <div class="reservation">
        <div id="kUI_window" style="display:none;">
            @Html.Partial("pDetailCabin")
        </div>
    </div>

    <div class="uk-grid uk-grid-small">
        <div class="uk-width-1">
            <div class="md-card">
                <div class="md-card-toolbar">
                    <h3 class="md-card-toolbar-heading-text">
                        <img src="/FileDefault/cruise.png" style="display: inline-block;margin: 0 auto;width: 20px;margin-top: -4px;">
                        DANH SÁCH CABIN
                    </h3>
                </div>
                <div class="md-card-content">
                    <div class="uk-grid">
                        <div class="uk-width-1">
                            <div class="uk-grid">
                                <div class="uk-width-large-1-4 uk-width-medium-1-3 uk-width-1-2 uk-margin-small-bottom">
                                    <div class="md-input-wrapper">
                                        <label class="label-fixed">Tìm kiếm</label>
                                        <input ng-change="Get()" ng-model="filters._keySearch" type="text" class="md-input" placeholder="Tên cabin, tàu">
                                    </div>
                                </div>
                                <div class="uk-width-large-1-4 uk-width-medium-1-3 uk-width-1-2 uk-margin-small-bottom">
                                    <div class="md-input-wrapper">
                                        <label class="label-fixed">Tàu</label>
                                        <select ng-change="Get()" ng-model="filters._cruiseId" class="md-input" convert-to-number>
                                            <option value="-1">-- Chọn tàu --</option>
                                            <option value="{{item.CruiseId}}" ng-repeat="item in cruises">{{item.CruiseName}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="uk-width-large-1-2 uk-width-medium-1-3 uk-width-1">
                                    <button ng-click="showAdd()" class="md-btn md-btn-primary md-btn-wave-light" style="float: right;margin-top: 2px;">Thêm cabin</button>
                                </div>
                            </div>
                        </div>
                        <div class="uk-width-1">
                            <div>
                                <div ui-grid="gridOptions" ui-grid-selection ui-grid-resize-columns ui-grid-move-columns
                                     ui-grid-pinning ui-grid-pagination ui-grid-exporter ui-grid-auto-resize class="grid"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("pConfirmDelete")
</div>