                </div>
                <div class="col-lg-4 col-md-4">
                    <span>Type de voyage : @tourDetail.PromotionTitle</span>
                </div>
            </div>
        </div>
        <span class="wow fadeInUp">
            @Html.Raw(tourDetail.Overview)
